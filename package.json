{
    "name": "docker_express_sample",
    "version": "0.0.2",
    "type": "module",
    "scripts": {
        "start": "node ./dist/src/app",
        "build": "rm -rf dist && tsc",
        "dev": "tsx ./src/app",
        "lint": "eslint src/**/*.ts __tests__/**/*.ts",
        "prettier": "prettier --write src/*.ts __tests__/*.ts",
        "test": "vitest"
    },
    "prettier": {
        "printWidth": 120,
        "semi": false
    },
    "dependencies": {
        "express": "^4.21.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/express": "^4.17.21",
        "@types/node": "^22.13.13",
        "eslint": "^9.23.0",
        "prettier": "^3.5.3",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0",
        "vitest": "^3.0.9"
    }
}
