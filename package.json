    "express": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
