{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "vitest/globals"]
  },
  "include": ["src"]
}
